    <Toolbar
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/AppTheme">

        <ImageButton
            android:id="@+id/backToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_baseline_arrow_white_ios_24" />


        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sản phẩm"
            android:textColor="#FFF"
            android:textSize="28sp" />


    </Toolbar>

    <LinearLayout
        android:id="@+id/linearLayoutSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/search_layout"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_top">


        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:queryHint="Nhập tên sản phẩm, mã Barcode"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="81dp">

        </SearchView>

        <ImageButton
            android:id="@+id/imgbtnBarcode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="0.8"
            android:background="@drawable/barcode_icon_layout"
            android:left="5dp"
            app:srcCompat="@drawable/barcode"
            tools:layout_editor_absoluteX="346dp"
            tools:layout_editor_absoluteY="80dp"></ImageButton>
    </LinearLayout>

    <Spinner
        android:id="@+id/category_Spinner"
        android:layout_width="203dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutSearch"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutSearch" />

    <TextView
        android:id="@+id/tvTotalQuantity"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/quantity_layout"
        android:paddingLeft="25dp"
        android:paddingTop="9dp"
        android:text="0 sản phẩm"
        app:layout_constraintEnd_toStartOf="@+id/btnAddNewProduct"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_Spinner" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewListProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalQuantity" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Thêm"
        app:layout_constraintBottom_toTopOf="@+id/btnAddNewProduct"
        app:layout_constraintEnd_toEndOf="@+id/btnAddNewProduct" />

    <ImageButton
        android:id="@+id/btnAddNewProduct"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/quantity_layout"
        android:left="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvTotalQuantity"
        app:layout_constraintTop_toTopOf="@+id/tvTotalQuantity"
        app:srcCompat="@drawable/ic_baseline_add_24"
        tools:ignore="MissingConstraints"></ImageButton>


</androidx.constraintlayout.widget.ConstraintLayout>