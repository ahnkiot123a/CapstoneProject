<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemDebtor"
    android:layout_width="match_parent"
    android:layout_height="100dp"

    android:background="@drawable/shape_box_border"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvDebitorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Khách lẻ"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imgViewProductPicture"
        app:layout_constraintTop_toTopOf="@id/imgViewProductPicture" />

    <ImageView
        android:id="@+id/imgViewProductPicture"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_weight="1"
        android:background="@drawable/shape_box_border"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_icon" />

    <TextView
        android:id="@+id/tvDebtTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Tổng nợ hiện tại"
        android:textColor="@color/red"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/imgViewProductPicture"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvDebitorPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="0338711933"
        android:textColor="#90000000"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/imgViewProductPicture"
        app:layout_constraintStart_toEndOf="@+id/imgViewProductPicture" />


</androidx.constraintlayout.widget.ConstraintLayout>