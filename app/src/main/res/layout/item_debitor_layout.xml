<!--        android:scaleType="fitXY"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:srcCompat="@drawable/user_icon" />-->

    <TextView
        android:id="@+id/tvDebtTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Tổng nợ hiện tại"
        android:textColor="@color/red"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/imgViewProductPicture"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvDebtorPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="0338711933"
        android:textColor="#90000000"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/imgViewProductPicture"
        app:layout_constraintStart_toEndOf="@+id/imgViewProductPicture" />


</androidx.constraintlayout.widget.ConstraintLayout>