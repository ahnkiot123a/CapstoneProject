<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">


    <Button
        android:id="@+id/btnAddNewCategory"
        android:layout_width="117dp"
        android:layout_height="47dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/green_linear_color"
        android:text="Thêm"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/edAddNewCategory"
        app:layout_constraintTop_toBottomOf="@+id/edAddNewCategory" />

    <Button
        android:id="@+id/btnCancelAddNewCategory"
        android:layout_width="117dp"
        android:layout_height="47dp"
        android:background="@color/gray"
        android:text="Huỷ"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/btnAddNewCategory"
        app:layout_constraintStart_toStartOf="@+id/edAddNewCategory" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="240dp"
        android:layout_height="31dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Thêm loại sản phẩm"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edAddNewCategory"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Nhập loại sản phẩm"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnCancelAddNewCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>